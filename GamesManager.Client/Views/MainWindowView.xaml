        xmlns:local="clr-namespace:GamesManager.Client"
        xmlns:viewmodels="clr-namespace:GamesManager.Client.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow">
    
    <Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
